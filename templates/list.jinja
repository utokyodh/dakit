<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if dakit_config['site']['theme']['css_from_cdn'] %}
    {{ dakit_config['site']['theme']['css_cdn_tag'] }}
    {% else %}
    <link href="{{ dakit_config['site']['document_root'] }}{{ dakit_config['site']['theme']['css_loc'] }}"
        rel="stylesheet">
    {% endif %}
    <title>{{ dakit_config['site']['title'] }}</title>
    {% if dakit_config['site']['theme']['page_custom_css'] != "" %}
    {{ dakit_config['site']['theme']['page_custom_css'] }}
    {% endif %}
    {% if dakit_config['site']['noindex'] %}
    <meta name="robots" content="noindex nofollow noarchive">
    {% endif %}
    <title>{{ dakit_config["site"]["title"] }}</title>
    <style>
        mark {
            background: yellow;
            color: black;
        }

        input[type="search"]::-webkit-search-cancel-button {
            height: 16px;
            /* キャンセルボタンのサイズ */
            width: 16px;
            /*  キャンセルボタンのサイズ */
        }

        #page-top {
            position: fixed;
            right: 10px;
            bottom: 10px;
            font-size: 1.2rem;
            line-height: 1.2rem;
            background: #fff;
            color: #737373;
            padding: 10px;
            border: solid 1px;
            border-radius: 50%;
            box-shadow: 0 2px 10px -6px rgba(0, 0, 0, .5), 0 3px 10px -4px rgba(0, 0, 0, .2);
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mark.js/8.11.1/mark.min.js"></script>
</head>

<body id="dakit">

    <div id="daList">
        <nav class="navbar fixed-top navbar-expand-sm {{ dakit_config['site']['navbar']['color'] }}">
            <div class="container">
                {% if dakit_config['site']['logo']['enabled'] %}
                <a class="navbar-brand"
                    href="{{ dakit_config['site']['document_root'] }}{{ dakit_config['site']['index_loc'] }}"><img
                        src="{{ dakit_config['site']['logo']['loc'] }}"
                        height="{{ dakit_config['site']['logo']['height'] }}"
                        style="{{ dakit_config['site']['logo']['custom_style'] }}"></a>
                {% else %}
                <a class="navbar-brand"
                    href="{{ dakit_config['site']['document_root'] }}{{ dakit_config['site']['index_loc'] }}">{{
                    dakit_config['site']['title'] }}</a>
                {% endif %}
                {% if dakit_config['site']['navbar']['expand'] %}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#dakit-navbar"
                    aria-controls="dakit-navbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                {% endif %}

                <div class="collapse navbar-collapse" id="navbarsExample03">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                    </ul>
                    <form class="w-50">
                        <div class="input-group">
                            <input id="searchBox" class="form-control" type="search" placeholder="ここに検索ワードを入力"
                                aria-label="Search">
                            <input type="text" style="display: none;">
                            <button id="searchButton" class="btn btn-primary" type="button">検索</button>
                        </div>
                    </form>
                </div>
            </div>
        </nav>


        <main class="container">

            <div class="bg-light p-5 rounded">
                <ul class="pagination"></ul>
                <ul><span id="itemCounter">読み込み中……</span></ul>
                <div id="loadingSpinner"
                    class="d-flex justify-content-center position-absolute top-50 start-50 w-100 translate-middle">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <ul class="list list-unstyled"></ul>
            </div>
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha256-cMPWkL3FzjuaFSfEYESYmjF25hCIL6mfRSPnW8OVvM4=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fuse.js@6.6.2"></script>
    <script defer src="{{ dakit_config['site']['document_root'] }}{{ dakit_config['site']['js_loc'] }}"></script>
</body>

</html>